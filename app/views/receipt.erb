<% if @change_owed.round(2) < 0 %>
	Customer still owes $<%= -@change_owed.round(2)%>, go back"
<% else %>

	<% @shop_details.each do |detail| %>
		<ul>
			<%= detail %>
		</ul>
	<% end %>

	<% @order.each do |item| %>
		<ul>
			<%= item %>
		</ul>
	<% end %>

